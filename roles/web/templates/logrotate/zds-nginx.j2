{{ logdir }}/nginx*.log {
        daily
        missingok
        maxage 365
        compress
        notifempty
        create 640 nginx adm
        delaycompress
        sharedscripts
        postrotate
                if [ -f /var/run/nginx.pid ]; then
                        kill -USR1 `cat /var/run/nginx.pid`
                fi
        endscript
}
